                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dice_6"
                        android:padding="4dp"/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Die 4 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Die 4:"
                android:layout_marginEnd="8dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView android:id="@+id/die4_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dice_1"
                        android:padding="4dp"/>

                    <ImageView android:id="@+id/die4_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dice_2"
                        android:padding="4dp"/>

                    <ImageView android:id="@+id/die4_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dice_3"
                        android:padding="4dp"/>

                    <ImageView android:id="@+id/die4_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dice_4"
                        android:padding="4dp"/>

                    <ImageView android:id="@+id/die4_5"
                        android:layout_width="50dp"
